{% extends 'base.html.twig' %}

{% block body %}
  <div class="container">

<div class="card border-primary my-3">
        <h1 class="card-header">
      modifier son profil
        </h1>
</div>
     {% for message in app.flashes('success') %}
      <div class="alert alert-success mt-4">
        {{ message }}
      </div>
    {% endfor %} 

    {{ form_start(form) }}

    <div class="form-group">
      {{ form_label(form.NameEntreprise) }}
      {{ form_widget(form.NameEntreprise) }}
      <div class="form-error">
        {{ form_errors(form.NameEntreprise) }}
      </div>
    </div>
    
    <div class="form-group">
      {{ form_label(form.adresseEntreprise) }}
      {{ form_widget(form.adresseEntreprise) }}
      <div class="form-error">
        {{ form_errors(form.adresseEntreprise) }}
      </div>
    </div>

       <div class="form-check ">
      {{ form_label(form.submit) }}
      {{ form_widget(form.submit) }}
     
    </div>
  
  {{ form_row(form._token) }}
  </div>
  {{ form_end(form) }}
{% endblock %}
