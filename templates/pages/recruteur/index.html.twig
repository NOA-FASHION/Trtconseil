{% extends 'base.html.twig' %}

{% block title %}TRTConseil - Recruteur{% endblock %}

{% block body %}
{% if not recruteurs.items is same as ([]) %}
<div class="container mt-4">
<h1>Espace recruteur</h1>


     {% for message in app.flashes('success') %}
      <div class="alert alert-success mt-4">
        {{ message }}
      </div>
    {% endfor %} 


<h1>Profil</h1>
<table class="table table-hover mt-2">
  <thead>
    <tr>
     <th scope="col">Numéro</th>
      <th scope="col">nom de l'entreprise</th>
      <th scope="col">Activation</th>
      <th scope="col">adresse entreprise</th>

      <th scope="col">Edition</th>
      <th scope="col">Annonces</th>
    </tr>
  </thead>
  <tbody>
   {% for recruteur in recruteurs %}
    <tr class="table-primary">
      <th scope="row">{{recruteur.id}}</th>
      <td> {{recruteur.NameEntreprise}}</td>
      {% if recruteur.active %}
       <td>   validé</td>
        {% else %}
       <td>  non validé</td>
      {% endif %}
    
      <td> {{recruteur.adresseEntreprise}}</td>
 
      <td>
        <a href="{{ path('recruteur.edit',{id : recruteur.id}) }}" class = "btn btn-info">Modifier</a>
      </td>
       <td>
        <a href="{{path('recruteur.annonce',{id : recruteur.id})}}" class = "btn btn-warning">annonces</a>
      </td>
    </tr>
  {% endfor %}
  </tbody>
</table>
<div class="navigation d-flex justify-content-center mt-4">
    {{ knp_pagination_render(recruteurs) }}
</div>
{% else %}
<h4>Il n'y a pas d'ingrédients</h4> #}
{% endif %}
</div>
{% endblock %}
