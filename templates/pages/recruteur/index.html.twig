{% extends 'base.html.twig' %}

{% block title %}TRTConseil - Recruteur{% endblock %}

{% block body %}

<div class="container mt-4">
<h1>Espace recruteur</h1>

{% if recruteur.active %}
<h1  class="badge bg-primary fs-6 mr-5">
Compte Actif
</h1>
{% else %}
<h1  class="badge bg-primary fs-6 mr-5">
Compte désactivé
</h1>


{% endif %}


     {% for message in app.flashes('success') %}
      <div class="alert alert-success mt-4">
        {{ message }}
      </div>
    {% endfor %} 


<h1>Profil</h1>
<table class="table table-hover mt-2">
  <thead>
    <tr>
     <th scope="col">Numéro</th>
      <th scope="col">nom de l'entreprise</th>
      <th scope="col">Activation</th>
      <th scope="col">adresse entreprise</th>

      <th scope="col">Edition</th>
      <th scope="col">Annonces</th>
    </tr>
  </thead>
  <tbody>
   
    <tr class="table-primary">
      <th scope="row">{{recruteur.id}}</th>
      <td> {{recruteur.NameEntreprise}}</td>
      {% if recruteur.active %}
       <td>   validé</td>
        {% else %}
       <td>  non validé</td>
      {% endif %}
    
      <td> {{recruteur.adresseEntreprise}}</td>
 
      <td>
        <a href="{{ path('recruteur.edit',{id : recruteur.id}) }}" class = "btn btn-info">Modifier</a>
      </td>
       {# <td>
        <a href="{{path('recruteur.annonce',{id : recruteur.id})}}" class = "btn btn-warning">annonces</a>
      </td> #}
    </tr>

  </tbody>
</table>

{% if recruteur.active %}

{# {% if not annonces.items is same as ([]) %} #}
<div class="container mt-4">
<h1>Annonces</h1>

 <a class="btn btn-primary btn-dark"  href="{{ path('recruteur.annonce.new',{id : id}) }}">nouvelle annonce</a>
     {% for message in app.flashes('success') %}
      <div class="alert alert-success mt-4">
        {{ message }}
      </div>
    {% endfor %} 

<table class="table table-hover mt-2">
  <thead>
    <tr>
     <th scope="col">Numéro</th>
      <th scope="col">Annonce</th>
      <th scope="col">Activation</th>
      <th scope="col">intitulé du poste</th>


      <th scope="col">Editer</th>
      <th scope="col">supprimer</th>
    </tr>
  </thead>
  <tbody>
   {% for annonce in annonces %}
    <tr class="table-primary">
      <th scope="row">{{annonce.id}}</th>
      <td> {{annonce.name}}</td>
      {% if annonce.active %}
       <td>   validé</td>
        {% else %}
       <td>  non validé</td>
      {% endif %}
     <td> {{annonce.intitulePoste}}</td>
    

{#  
      <td>
        <a href="{{ path('recruteur.annonce.new',{id : id}) }}" class = "btn btn-info">créér</a>
      </td> #}
       <td>
         <a href="{{ path('recruteur.annonce.edit',{id : id,id1 : annonce.id}) }}" class="btn btn-info">edit</a> 
      </td>
        <td>
         <a href="{{ path('recruteur.annonce.delete',{id : id,id1 : annonce.id}) }}" class="btn btn-info">delete</a> 
      </td>
    </tr>
  {% endfor %}
  </tbody>
</table>
 
</div>
{% else %}
<h4>
Votre compte n'est pas encore actif.


</h4> 
<h4>

Votre compte doit être actif pour pouvoir créer des annonces

</h4>
{% endif %}

</div>
{% endblock %}
