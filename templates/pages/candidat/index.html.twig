{% extends 'base.html.twig' %}

{% block title %}TRTConseil - Recruteur{% endblock %}

{% block body %}

<div class="container mt-4">
<h1>Espace candidat</h1>

{% if candidat.activation %}
<h1  class="badge bg-primary fs-6 mr-5">
Compte Actif
</h1>
{% else %}
<h1  class="badge bg-primary fs-6 mr-5">
Compte désactivé
</h1>
{% endif %}

     {% for message in app.flashes('success') %}
      <div class="alert alert-success mt-4">
        {{ message }}
      </div>
    {% endfor %} 


<h1>Profil</h1>
<table class="table table-hover mt-2">
  <thead>
    <tr>
     <th scope="col">Numéro</th>
      <th scope="col">Nom du candidat</th>
      <th scope="col">Prenom</th>
      <th scope="col">Validation</th>

      <th scope="col">Edition</th>
      <th scope="col">Annonces</th>
    </tr>
  </thead>
  <tbody>
  
    <tr class="table-primary">
    
      <th scope="row">{{candidat.id}}</th>
      <td> {{candidat.name}}</td>
         <td> {{candidat.lastname}}</td>
      {% if candidat.activation %}
       <td>   validé</td>
        {% else %}
       <td>  non validé</td>
      {% endif %}
    
   
 
      <td>
        <a href="{{ path('candidat.edit',{id : candidat.id}) }}" class = "btn btn-info">Modifier</a>
      </td>
       <td>
        <a href="{{path('candidat.annonce')}}" class = "btn btn-warning">Annonces</a>
      </td>
    </tr>

  </tbody>
</table>
{# <div class="navigation d-flex justify-content-center mt-4">
    {{ knp_pagination_render(candidats) }}
</div> #}


<div class="container mt-4">



{% if candidat.activation %}

<h1>Annonces en cours</h1>
<table class="table table-hover mt-2">
  <thead>
    <tr>
     <th scope="col">Numéro</th>
      <th scope="col">Annonce</th>
      <th scope="col">Activation</th>
      <th scope="col">intitulé du poste</th>


      <th scope="col">Postulez</th>
      {# <th scope="col">supprimer</th> #}
    </tr>
  </thead>
  <tbody>
   {% for annonce in annonces %}
    <tr class="table-primary">
      <th scope="row">{{annonce.id}}</th>
      <td> {{annonce.name}}</td>
      {% if annonce.active %}
       <td>   validé</td>
        {% else %}
       <td>  non validé</td>
      {% endif %}
     <td> {{annonce.intitulePoste}}</td>
    
      <td>
        <a href="#" class = "btn btn-info">Postulez</a>
      </td>


      </td>
    </tr>
  {% endfor %}
  </tbody>
</table>
<div class="navigation d-flex justify-content-center mt-4">
    {{ knp_pagination_render(annonces) }}
</div>

</div>
{% else %}
<h4>
Votre compte n'est pas encore actif.


</h4> 
<h4>

Votre compte doit être actif pour pouvoir créer des annonces

</h4>
{% endif %}
</div>
{% endblock %}
